<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tviniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="INICIAR SESION"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvmensajeInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Ven a leer y deja que tu imaginacion \n pueda volar sin limites"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textViewCorreoSesion"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:drawableEnd="@drawable/ic_baseline_email"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/editext"
            android:hint="Correo Electronico"
            android:minHeight="48dp"
            android:textSize="15dp" />


        <EditText
            android:id="@+id/textPassSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/editext"
            android:paddingRight="10dp"
            android:drawableEnd="@drawable/ic_baseline_lock_24"
            android:hint="ContraseÃ±a"
            android:minHeight="48dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/custom_button"
            android:text="INICIAR SESION" />


        <TextView
            android:id="@+id/textViewCrear"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No estas Registrado? Crear Cuenta "
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"/>


    </LinearLayout>


</LinearLayout>