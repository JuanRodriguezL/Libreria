<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".UsuLibrosDisponibles">

    <ImageView
        android:id="@+id/usuLibrosImagen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_baseline_arrow_menu"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:text="  LIBROS DISPONIBLES"
        android:textStyle="bold" />

    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#F44336"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reciclerLibrosDisponiblesUsu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_libros_disponibles" />


</LinearLayout>