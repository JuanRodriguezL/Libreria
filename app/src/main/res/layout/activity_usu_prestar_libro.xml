<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".UsuPrestarLibro">
    <TextView
        android:id="@+id/textViewPrestar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Prestar Libro"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewPrestar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#F44336"
        app:layout_constraintBottom_toBottomOf="@id/textView"
 />


    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/imageViewPrestarLibro"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textViewPrestarNombre"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:hint="Nombre Libro" />

    <TextView
        android:id="@+id/textViewDescripcionPrestar"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:hint="Descripcion Libro" />

    <View
        android:id="@+id/view8"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"

        android:background="#F44336"
        app:layout_constraintStart_toStartOf="@id/buttonPrestar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="646dp" />

    <Button
        android:id="@+id/buttonPrestarConfirma"
        android:layout_width="match_parent"
        android:background="@drawable/custom_button"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="Prestar" />

</LinearLayout>